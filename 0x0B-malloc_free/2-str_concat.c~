#include <stdlib.h>
#include "main.h"

/**
 *str_concat- concatenates two strings
 *@s1: a pointer to char as a parameter
 *@s2: a pointer to char as a parameter
 *Return: a pointer to newly allocated space
 */


char *str_concat(char *s1, char *s2)
{

int len1 = 0;
int len2 = 0;
int i;
char *concatString;


for (i = 0; i < '\0'; i++)
{
s1[len1]++;
s2[len2]++;
}
concatString = malloc(sizeof(char) * (len1 + len2));
if (concatString == NULL)
{
return (NULL);
}
concatString = strcat(s1, s2);

s1[length] = '\0';

return (concatString);

}
